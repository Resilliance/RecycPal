#:kivy 2.2.1

<RecycpalHistoryDetailView>:
	name: "Detail"
	md_bg_color: 0.396,0.627,0.537,1
	orientation:'vertical'
	MDBoxLayout:
		orientation:'vertical'
		md_bg_color: 0.396,0.627,0.537,1
		MDTopAppBar:
			left_action_items: [["arrow-left", lambda x: app.back_to_history()]]
			md_bg_color:0.396,0.627,0.537,1 
			elevation:0
			pos_hint:{'center_x':0.5,'center_y':0.96} 
		ScrollView:
			id: detail_screen
			padding: dp(5)
			do_scroll_x: False
			canvas.before:
				Color:
					rgba: (0.396,0.627,0.537,1)
					# rgba: (1,0,0,1)
				Rectangle:
					pos: self.pos
					size: self.size
			MDGridLayout:
				id: detail_box
				cols:1
				padding: dp(10)
				minimum_height: self.minimum_height
				size_hint_y: 1.5
		

<RecycpalHistory>:
	name: "RecycpalHistory"
	md_bg_color: 0.396,0.627,0.537,1
	ScrollView:
		id:history_screen
		BoxLayout:
			id:images_box
			orientation:'vertical'
			spacing: 10
			size_hint_y: None
			padding:dp(20)
			height: self.minimum_height

		

<RecycpalCamera>:
	orientation: 'vertical'
	FloatLayout:
		id: camera_screen
		padding: dp(5)
		canvas.before:
			Color:
				rgba: (0.396,0.627,0.537,1)
			Rectangle:
				pos: self.pos
				size: self.size
		BoxLayout:
			padding: dp(15)
			size_hint: (0.9,0.9)
			pos_hint: {'center_x':0.5, 'center_y':0.5}
			canvas.before:
				Color:
					rgba: (0.894,0.890,0.667,1)
				RoundedRectangle:
                    pos: self.pos
                    size: self.size
					radius: [15,]
			BoxLayout:
				id: camera_box
				Camera:
					id: camera
					resolution: (1080,1920)
					play: True
					allow_stretch:True

		MDFloatingActionButton:
			id: capture_button
			md_bg_color:0.396,0.627,0.537,2 
			user_font_size: "60sp"
			pos_hint: {'center_x': 0.5,'center_y': 0.15}
			on_release: root.capture()


<RecycpalInfo>:
	md_bg_color: 0.396,0.627,0.537,1	
	MDLabel:
		text: "Information"
		halign: "center"

BoxLayout:
	orientation: 'vertical'



	MDBottomNavigation:
		panel_color:"#65A089"
		#selected_color_background: "#F7FFE5"
		text_color_active: "lightgrey"

		MDBottomNavigationItem:
			name: 'History'
			text: 'History'
			icon: 'filter'
			
			MDScreenManager:
				id: history
				play: False



		MDBottomNavigationItem:
			name: 'Camera'
			text: 'Camera'
			icon: 'camera'
			
			MDScreenManager:
				id: camera
				RecycpalCamera:
					name: "camera_screen"

		MDBottomNavigationItem:
			name: 'Info'
			text: 'Info'
			icon: 'book'
			
			MDScreenManager:
				id: info
				play:False
